<script type="text/x-handlebars" data-template-name="search_results">
  <div class="container">
    <div class="row">
      <div class="span12">
        <section id="todoapp">
          <header id="header">
            <h1>Blacklight</h1>
            {{input type="text" id="q" placeholder="Search for..."
              value=query action="runSearch"}}
          </header>
          <section id="main">
            {{#each}}
              <li>{{id}} {{title_display}}</li>
            {{/each}}
          </section>
          {{outlet facets}}
        </section>
      </div>
    </div>
  </div>
</script>

<script type="text/x-handlebars" data-template-name="facets">
  <section id="facets">
    <header>
      <h2>Facets</h2>
    </header>
    {{#each}}
    <li>{{name}} {{items_size}}</li>
    {{/each}}
  </section>
</script>

